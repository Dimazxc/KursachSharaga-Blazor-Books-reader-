@using WebApplication9.Data.Models;

<MudCard Class="mud-elevation-4 mb-3">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="MudBlazor.Color.Secondary">@Comment.UserName[0]</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Comment.UserName</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Comment.Content</MudText>
    </MudCardContent>
    <MudCardActions>
        <CommentRatingItem Comment="@Comment" />
    </MudCardActions>
</MudCard>


@code {
    [Parameter] public WebApplication9.Data.Models.Comment Comment { get; set; }
}
