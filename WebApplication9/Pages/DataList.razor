@using WebApplication9.Data.Models;

<MudGrid Justify="MudBlazor.Justify.Center">
    <MudItem xs="11">
        @Header
        <MudGrid Spacing="4" Justify="MudBlazor.Justify.Center" Class="tiles">
            @MainContent
        </MudGrid>
    </MudItem>
    @Footer
</MudGrid>

@code {
    [Parameter]
    public RenderFragment MainContent { get; set; }

    [Parameter]
    public RenderFragment Header { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }
}
